{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 2,
  "default_container_padding": 2,
  "border": true,
  "border_width": 5,
  "border_offset": -1,
  "mouse_follows_focus": true,
  "focus_follows_mouse": "Windows",
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "W",
          "layout": "BSP"
        },
        {
          "name": "E",
          "layout": "BSP"
        },
        {
          "name": "R",
          "layout": "BSP"
        },
        {
          "name": "T",
          "layout": "BSP"
        } 
      ]
    }
  ]
}
